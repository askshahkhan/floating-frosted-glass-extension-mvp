{
  "manifest_version": 3,
  "name": "Floating Box Extension",
  "version": "1.0",
  "description": "A simple extension with a floating box that can be positioned anywhere on the page",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_title": "Toggle Floating Box"
  }
}
